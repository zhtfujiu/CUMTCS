<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#CAE1FF"
    android:orientation="horizontal">

<LinearLayout 
    android:id="@+id/main_tab_shangjia"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    >
    <ImageButton 
        android:id="@+id/main_tab_sj_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/faxian"
        android:clickable="false"/>
    <TextView 
        android:text="商家"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:clickable="false"
        />
              
</LinearLayout>
<LinearLayout 
    android:id="@+id/main_tab_woyaoping"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    >
    <ImageButton 
        android:id="@+id/main_tab_wyp_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/faxian"
        android:clickable="false"/>
    <TextView 
        android:text="评价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:clickable="false"
        />
              
</LinearLayout>

<LinearLayout 
    android:id="@+id/main_tab_geren"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    >
    <ImageButton 
        android:id="@+id/main_tab_gr_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/faxian"
        android:clickable="false"/>
    <TextView 
        android:text="个人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:clickable="false"
        />
              
</LinearLayout>

</LinearLayout>