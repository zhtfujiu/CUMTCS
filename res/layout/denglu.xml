<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background3"
    android:orientation="vertical" >

    <include layout="@layout/main_top"/>"
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/denglu_et_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#40C9C9C9"
            android:gravity="center"
            android:hint="用户名为学号" />

        <EditText
            android:id="@+id/denglu_et_password"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/denglu_et_name"
            android:layout_marginTop="20dp"
            android:background="#40C9C9C9"
            android:gravity="center"
            android:hint="密码"
            android:password="true" />

        <CheckBox
            android:id="@+id/denglu_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/denglu_et_name"
            android:layout_below="@id/denglu_et_password"
            android:layout_marginTop="20dp"
            android:text="记住密码" />

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/denglu_checkbox"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <Button
            android:id="@+id/btn_to_zhuce"
            style="@android:style/MediaButton.Pause"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"  
            android:text="新用户注册"/>
            <Button
            android:id="@+id/btn_denglu"
            style="@android:style/MediaButton.Pause"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"  
            android:text="登录"/>
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>