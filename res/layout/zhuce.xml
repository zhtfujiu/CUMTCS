<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:text="注册"
        android:gravity="center"
        android:background="#CAE1FF"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    </RelativeLayout>
    
    <EditText 
        android:id="@+id/zhuce_et_ID"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="50dp"
         android:hint="用户名为学号"
         android:gravity="center"
        />
    <EditText 
        android:id="@+id/zhuce_et_name"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="20dp"
         android:hint="昵称"
         android:gravity="center"
        />
    <EditText 
        android:id="@+id/zhuce_et_password_1"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="20dp"
         android:hint="密码"
         android:password="true"
         android:gravity="center"
        />
    <EditText 
        android:id="@+id/zhuce_et_password_again"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="20dp"
         android:hint="请重复密码"
         android:password="true"
         android:gravity="center"
        />

    <Button
        android:id="@+id/btn_zhuce_action"
        style="@android:style/MediaButton.Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#7EC0EE"
        android:textStyle="bold"
        android:text="注册" />

</LinearLayout>