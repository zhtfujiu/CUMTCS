<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/listitem_layout_userhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/listitem_userhead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_head" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listitem_layout_userhead"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listitem_usernicheng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dip"
            android:text="User_Nicheng"
            android:textSize="18sp" />

        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
            android:id="@+id/listitem_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="time" />
            
            <TextView
                android:id="@+id/listitem_locationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="locationName" />

            <TextView
                android:id="@+id/listitem_storeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:clickable="true"
                android:text="storeName" />

         
        </LinearLayout>

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dip"
            >
            <TextView 
                android:id="@+id/listitem_shangpin"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ScoreOfShangpin"
                android:layout_weight="1"
                />
            <TextView 
                android:id="@+id/listitem_fuwu"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ScoreOfFuwu"
                android:layout_weight="1"
                />
            
        </LinearLayout>
        <TextView
            android:id="@+id/listitem_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dip"
            android:text="comment\n\n\n\ncomment" />
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listitem_picture"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

</RelativeLayout>